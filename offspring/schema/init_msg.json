{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InitMsg",
  "type": "object",
  "required": [
    "count",
    "factory",
    "index",
    "owner",
    "password"
  ],
  "properties": {
    "count": {
      "type": "integer",
      "format": "int32"
    },
    "description": {
      "description": "Optional text description of this offspring",
      "type": [
        "string",
        "null"
      ]
    },
    "factory": {
      "description": "factory contract code hash and address",
      "allOf": [
        {
          "$ref": "#/definitions/ContractInfo"
        }
      ]
    },
    "index": {
      "description": "index within the factory",
      "type": "integer",
      "format": "uint32",
      "minimum": 0.0
    },
    "owner": {
      "$ref": "#/definitions/HumanAddr"
    },
    "password": {
      "description": "password to be used by factory",
      "type": "array",
      "items": {
        "type": "integer",
        "format": "uint8",
        "minimum": 0.0
      },
      "maxItems": 32,
      "minItems": 32
    }
  },
  "definitions": {
    "ContractInfo": {
      "description": "code hash and address of a contract",
      "type": "object",
      "required": [
        "address",
        "code_hash"
      ],
      "properties": {
        "address": {
          "description": "contract's address",
          "allOf": [
            {
              "$ref": "#/definitions/HumanAddr"
            }
          ]
        },
        "code_hash": {
          "description": "contract's code hash string",
          "type": "string"
        }
      }
    },
    "HumanAddr": {
      "type": "string"
    }
  }
}
